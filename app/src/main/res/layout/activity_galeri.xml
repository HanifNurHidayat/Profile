<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".GaleriActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_cardview1"
                        android:src="@drawable/protokol"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                    <TextView
                        android:text="Galeri1"
                        android:textColor="#f7f6f6"
                        android:layout_alignBottom="@id/iv_cardview1"
                        android:layout_centerHorizontal="true"
                        android:textSize="35sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_cardview1"
                        android:text="Galeri1"
                        android:layout_margin="16dp"
                        android:textSize="16sp"
                        android:layout_below="@id/iv_cardview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_cardview2"
                        android:src="@drawable/protokol"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                    <TextView
                        android:text="Galeri2"
                        android:textColor="#f7f6f6"
                        android:layout_alignBottom="@id/iv_cardview2"
                        android:layout_centerHorizontal="true"
                        android:textSize="35sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_cardview2"
                        android:text="Galeri2"
                        android:layout_margin="16dp"
                        android:textSize="16sp"
                        android:layout_below="@id/iv_cardview2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_cardview3"
                        android:src="@drawable/protokol"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                    <TextView
                        android:text="Galeri3"
                        android:textColor="#f7f6f6"
                        android:layout_alignBottom="@id/iv_cardview3"
                        android:layout_centerHorizontal="true"
                        android:textSize="35sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_cardview3"
                        android:text="Galeri3"
                        android:layout_margin="16dp"
                        android:textSize="16sp"
                        android:layout_below="@id/iv_cardview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_cardview4"
                        android:src="@drawable/protokol"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                    <TextView
                        android:text="Galeri4"
                        android:textColor="#f7f6f6"
                        android:layout_alignBottom="@id/iv_cardview4"
                        android:layout_centerHorizontal="true"
                        android:textSize="35sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_cardview4"
                        android:text="Galeri4"
                        android:layout_margin="16dp"
                        android:textSize="16sp"
                        android:layout_below="@id/iv_cardview4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

</LinearLayout>
    </ScrollView>
</LinearLayout>